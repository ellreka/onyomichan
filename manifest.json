{
  "manifest_version": 2,
  "name": "おんヨミちゃん",
  "description": "おーぷん２ちゃんねるのスレッドを読み上げる拡張機能です",
  "version": "0.1.5",

  "browser_action": {
    "default_title": "おんヨミちゃんの設定をする",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
      {
    "matches": ["http://*.open2ch.net/test/read.cgi/*","http://*.open2ch.net//test/*"],
    "js": ["vue.min.js","jquery-3.2.1.min.js","contentscript.js"],
    "css":["style.css"]
      }
  ],

  "web_accessible_resources": [
    "images/*.svg"
  ],

  "icons":{
    "128": "images/onchan128.png"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval' https://unpkg.com/semantic-ui-vue/dist/umd/ ; object-src 'self’",

  "permissions": [
    "tabs",
    "tts",
    "storage"
  ]

}

