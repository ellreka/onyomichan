{
  "manifest_version": 2,
  "name": "おんヨミちゃん",
  "description": "おーぷん２ちゃんねるのスレッドを読み上げる拡張機能です",
  "version": "0.2.0",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "browser_action": {
    "default_title": "おんヨミちゃんの設定をする",
    "default_popup": "/views/popup.html"
  },

  "background": {
    "scripts": ["/scripts/background.bundle.js"],
    "persistent": false
  },

  "options_page": "/views/options.html",

  "content_scripts": [
    {
      "matches": [
        "https://*.open2ch.net/test/read.cgi/*"
      ],
      "js": [
        "scripts/vue.min.js",
        "scripts/contentScripts.bundle.js"
      ],
      "css":[
        "/styles/style.css"
      ]
    }
  ],

  "web_accessible_resources": [
    "/images/*.svg"
  ],

  "icons":{
    "128": "/images/onchan128.png"
  },

  "permissions": [
    "storage"
  ]

}

